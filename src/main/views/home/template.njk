{% extends "../common/template.njk" %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}

{% block content %}

  {% set searchTabHtml %}
    {% include '../search/template.njk' %}
  {% endset -%}

  {% set caseViewsTabHtml %}
    {%  include '../case-views/template.njk' %}
  {% endset -%}

  {% set caseSearchesTabHtml %}
    {% include '../case-searches/template.njk' %}
  {% endset -%}

  {{ govukTabs({
    items: [
      {
        label: "Search",
        id: "search-tab",
        panel: {
          html: searchTabHtml
        }
      },
      {
        label: "Case Views",
        id: "case-views-tab",
        panel: {
          html: caseViewsTabHtml
        }
      },
      {
        label: "Case Searches",
        id: "case-searches-tab",
        panel: {
          html: caseSearchesTabHtml
        }
      }
    ]
  }) }}

{% endblock %}
